@using App.Extensions;
@model IEnumerable<App.ViewModels.SupplierViewModel>

@{
    ViewData["Title"] = "Suppliers List";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Document)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @this.FormatDocument(item.SupplierType, item.Document)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td class="text-right">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                        <span class="fa fa-search"></span>
                    </a>
                    <a class="btn btn-warning" disable-by-claim-name="Supplier" disable-by-claim-value="Edit" asp-action="Edit" asp-route-id="@item.Id">
                        <span class="fa fa-pencil"></span>
                    </a>
                    <a class="btn btn-danger" suppress-by-claim-name="Supplier" suppress-by-claim-value="Delete" asp-action="Delete" asp-route-id="@item.Id">
                        <span class="fa fa-trash"></span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>